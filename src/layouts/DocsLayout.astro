---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import DocsSidebar from '../components/DocsSidebar.astro';
import '../styles/global.css';

interface Props {
  title: string;
  currentPath: string;
}

const { title, currentPath } = Astro.props;
const pageTitle = title === 'STL Documentation' ? title : `${title} — STL Docs`;
const pageDescription = `${title} — STL documentation for Semantic Tension Language`;
const canonicalURL = new URL(Astro.url.pathname, 'https://stl-lang.org').href;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />
  <link rel="canonical" href={canonicalURL} />
  <!-- Open Graph -->
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:site_name" content="STL — Semantic Tension Language" />
  <meta property="og:image" content="https://stl-lang.org/og-image.png" />
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content="https://stl-lang.org/og-image.png" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="ai-manifest" content="/.well-known/site.stl" />
</head>
<body class="min-h-screen flex flex-col">
  <Header />
  <div class="flex-1 flex max-w-7xl mx-auto w-full">
    <DocsSidebar currentPath={currentPath} />
    <main class="flex-1 min-w-0 px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
  </div>
  <Footer />
  <script>
    import { inject } from '@vercel/analytics';
    inject();
  </script>
</body>
</html>
