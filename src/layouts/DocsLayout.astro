---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import DocsSidebar from '../components/DocsSidebar.astro';
import '../styles/global.css';

interface Props {
  title: string;
  currentPath: string;
}

const { title, currentPath } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} — STL Documentation</title>
  <meta name="description" content={`${title} — STL Documentation`} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="ai-manifest" content="/.well-known/site.stl" />
</head>
<body class="min-h-screen flex flex-col">
  <Header />
  <div class="flex-1 flex max-w-7xl mx-auto w-full">
    <DocsSidebar currentPath={currentPath} />
    <main class="flex-1 min-w-0 px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>
  </div>
  <Footer />
</body>
</html>
