  description="The evolution of machine-readable web content, from access control to native semantics.",
  order=2
)

[ASO:Level_0] -> [Definition] ::mod(
  name="robots.txt",
  year="1994",
  layer="Access Control",
  description="Tell crawlers what NOT to access. Binary allow/disallow.",
  order=0
)

[ASO:Level_1] -> [Definition] ::mod(
  name="sitemap.xml",
  year="2005",
  layer="Structure Discovery",
  description="Tell crawlers what pages exist. URL list with priorities.",
  order=1
)

[ASO:Level_2] -> [Definition] ::mod(
  name="Schema.org",
  year="2011",
  layer="Structured Annotation",
  description="Annotate HTML with structured data. JSON-LD embedded in pages.",
  order=2
)

[ASO:Level_3] -> [Definition] ::mod(
  name="llms.txt",
  year="2024",
  layer="LLM Summary",
  description="Markdown summary for LLMs. Quick overview, but flat and lossy.",
  order=3
)

[ASO:Level_4] -> [Definition] ::mod(
  name="site.stl",
  year="2026",
  layer="Native Semantics",
  description="Full semantic graph. Structured, traceable, calculable. AI agents consume directly.",
  order=4
)

